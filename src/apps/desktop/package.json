{
  "name": "@anidock/desktop",
  "version": "1.0.1",
  "type": "module",
  "private": true,
  "main": "./dist-electron/main/main.cjs",
  "description": "AniDock Hub is a desktop application for indexing public anime sites with public contents.",
  "author": {
    "name": "BuuhV Projects",
    "url": "https://buuhvprojects.com"
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:win": "electron-builder --win",
    "build:mac": "electron-vite build --mac",
    "build:linux": "electron-vite build --linux",
    "preview": "electron-vite preview",
    "package": "electron-builder --dir",
    "dist": "electron-builder",
    "version": "standard-version --message \"[skip ci]\"",
    "version:rc": "yarn changelog -- --prerelease rc --skip.changelog --skip.tag",
    "version:patch": "yarn changelog -- --release-as patch --prerelease rc",
    "version:minor": "yarn changelog -- --release-as minor --prerelease rc",
    "version:major": "yarn changelog -- --release-as major --prerelease rc"
  },
  "dependencies": {
    "@anidock/anime-core": "*",
    "@anidock/anime-drivers": "*",
    "@anidock/app-core": "*",
    "@anidock/shared-ui": "*",
    "@anidock/shared-utils": "*",
    "@hookform/resolvers": "^3.10.0",
    "@tanstack/react-query": "^5.83.0",
    "lucide-react": "^0.462.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.61.1",
    "react-router-dom": "^6.30.1",
    "sonner": "^1.7.4"
  },
  "devDependencies": {
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "electron": "33.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "standard-version": "9.3.2",
    "typescript": "^5.8.3",
    "vite": "^5.4.19"
  }
}
