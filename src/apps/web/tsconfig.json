{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@/*": ["./*"],
      "@anidock/anime-core": ["../../packages/anime-core/src"],
      "@anidock/anime-drivers": ["../../packages/anime-drivers/src"],
      "@anidock/app-core": ["../../packages/app-core/src"],
      "@anidock/shared-ui": ["../../packages/shared-ui/src"],
      "@anidock/shared-utils": ["../../packages/shared-utils/src"]
    }
  },
  "include": [".", "vite-env.d.ts"]
}

